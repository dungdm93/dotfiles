# https://ghostty.org/docs/config
theme = Dracula
font-family = "FiraCode Nerd Font Mono"
gtk-titlebar-style = tabs
gtk-wide-tabs = false

# https://gist.github.com/hensg/43bc71c21d1f79385892352a390aa2ca
# https://sterba.dev/posts/replacing-tmux/
keybind = "ctrl+shift+|=new_split:right"
keybind = "ctrl+shift+-=new_split:down"

keybind = "alt+left=goto_split:left"
keybind = "alt+down=goto_split:bottom"
keybind = "alt+up=goto_split:top"
keybind = "alt+right=goto_split:right"
keybind = "alt+z=toggle_split_zoom"

keybind = "shift+right=next_tab"
keybind = "shift+left=previous_tab"
